<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item that displays a news story -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingEnd="@dimen/standard_margin_8dp"
    android:paddingLeft="@dimen/small_margin_4dp"
    android:paddingRight="@dimen/standard_margin_8dp"
    android:paddingStart="@dimen/small_margin_4dp"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            tools:text="This is an example of how the article will look once it gets loaded into the listview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin_4dp"
            android:layout_marginTop="@dimen/small_margin_4dp">

            <TextView
                android:id="@+id/source_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/default_text_size18"
                tools:text="Technology" />

            <TextView
                android:id="@+id/article_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/default_text_size18"
                tools:text="Authors Name" />
        </LinearLayout>
    </LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="16dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/date_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:fontFamily="sans-serif-medium"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="16sp"
    tools:text="Article Date" />

<TextView
    android:id="@+id/url_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:fontFamily="sans-serif-medium"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/default_text_size16"
    tools:text="Article URL" />

<TextView
    android:id="@+id/category_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="false"
    android:layout_alignEnd="@id/url_textview"
    android:layout_alignRight="@id/url_textview"
    android:layout_alignParentLeft="true"
    android:fontFamily="sans-serif-medium"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/default_text_size16"
    tools:text="Category" />
</LinearLayout>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_marginRight="8dp"
android:textColor="@color/colorAccent"
android:textSize="@dimen/default_text_size18"
android:text="Read more" />

    </LinearLayout>

    </LinearLayout>
